{
  "name": "@nevis-security/nevis-mobile-authentication-sdk-react",
  "version": "3.5.1",
  "description": "React Native plugin for Nevis Mobile Authentication SDK. Supports only mobile.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "react-native": "src/index",
  "types": "lib/typescript/index.d.ts",
  "scripts": {
    "bootstrap": "yarn example && yarn install",
    "build": "bob build",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build",
    "example": "yarn --cwd example",
    "formatcheck": "yarn prettier -c \"{src,example/src}/**/*.{jsx,ts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\" \"example/src/**/*.{js,ts,tsx}\"",
    "release": "release-it",
    "test": "jest --collectCoverage",
    "typecheck": "tsc --noEmit"
  },
  "author": {
    "name": "Nevis Security AG",
    "email": "sales@nevis-security.com",
    "url": "https://www.nevis.net"
  },
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://www.nevis.net",
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/jest": "^29.5.6",
    "@types/react": "~18.2.20",
    "@types/react-native": "0.71.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "pod-install": "^0.1.0",
    "prettier": "3.0.3",
    "react-native-builder-bob": "^0.20.3",
    "react-native-uuid": "^2.0.0",
    "release-it": "^16.2.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/src/__tests__/testData"
    ],
    "setupFiles": [
      "<rootDir>/src/__mocks__/setupJest.ts"
    ]
  }
}
